# ============================================
# Variables de Entorno - Plataforma de Rendimiento Estudiantil
# ============================================

# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=cambia_esto_por_una_clave_segura_en_produccion
FLASK_DEBUG=True

# ============================================
# Base de Datos MySQL
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=rendimiento_estudiantil
DB_USER=root
DB_PASSWORD=tu_password_de_mysql

# ============================================
# Google Gemini API (OBLIGATORIO para IA)
# ============================================
# Obtén tu API Key en: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=tu_api_key_de_gemini_aqui

# Modelo a utilizar (opciones: gemini-1.5-flash, gemini-1.5-pro)
GEMINI_MODEL=gemini-1.5-flash

# Configuración del modelo
GEMINI_MAX_TOKENS=8192
GEMINI_TEMPERATURE=0.7

# ============================================
# Configuración de Archivos
# ============================================
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=50MB

# Carpetas de generación
GENERATED_FOLDER=generated

# ============================================
# Configuración de Seguridad
# ============================================
# JWT para autenticación (si se implementa)
JWT_SECRET_KEY=otra_clave_segura_para_jwt
JWT_ACCESS_TOKEN_EXPIRES=3600

# ============================================
# Configuración de CORS
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# Configuración de Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ============================================
# Configuración de APIs Externas (Opcional)
# ============================================
# OpenAI API (si decides usarla en lugar de Gemini)
# OPENAI_API_KEY=tu_openai_key

# Azure Computer Vision (para análisis avanzado de video)
# AZURE_COMPUTER_VISION_KEY=tu_azure_key
# AZURE_COMPUTER_VISION_ENDPOINT=https://tu-recurso.cognitiveservices.azure.com/

# Google Cloud Speech-to-Text (para transcripción avanzada)
# GOOGLE_CLOUD_PROJECT_ID=tu_proyecto_id
# GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# ============================================
# Configuración de Email (para notificaciones futuras)
# ============================================
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=tu_email@gmail.com
# MAIL_PASSWORD=tu_app_password

# ============================================
# Configuración de Redis (para caché, opcional)
# ============================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# ============================================
# Modo de Producción
# ============================================
# Para producción, cambia estos valores:
# FLASK_ENV=production
# FLASK_DEBUG=False
# SECRET_KEY=genera_una_clave_muy_segura_y_aleatoria
